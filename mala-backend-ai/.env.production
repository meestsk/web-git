# Production Environment Variables for AWS Deployment
# Copy these values to your EC2 instance

# Database Configuration (will be updated with RDS endpoint)
DATABASE_URL=postgresql://username:password@rds-endpoint:5432/mala_restaurant_db

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-super-secret-production-key-here-change-this
DEBUG=False

# File Upload Configuration
UPLOAD_FOLDER=/var/www/mala-restaurant/uploads
MAX_CONTENT_LENGTH=16777216

# CORS Configuration (update with your domain)
FRONTEND_URL=https://yourdomain.com

# AWS S3 Configuration (optional - for file uploads to S3)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_BUCKET=your-bucket-name
# AWS_REGION=ap-southeast-1

# Security
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Application Settings
HOST=0.0.0.0
PORT=5000